{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "wip",
        "release"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "deps",
        "api",
        "config",
        "core",
        "db",
        "release"
      ]
    ],
    "subject-case": [
      2,
      "never",
      [
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "header-max-length": [
      0,
      "always"
    ],
    "subject-max-length": [
      0,
      "always"
    ],
    "body-max-line-length": [
      0,
      "always"
    ],
    "footer-max-line-length": [
      0,
      "always"
    ]
  }
}
